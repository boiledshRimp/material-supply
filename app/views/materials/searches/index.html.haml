= form_with(url: materials_searches_path, local: true, method: :get, class: "search__form") do |form|
  = form.text_field :keyword, placeholder: "投稿を検索します", class: "search__form__input"
  = form.submit "検索", class: "search__form__btn"

.contents.p0
  .contents__inner
    - @materials.each do |material|
      = render partial: "materials/material", locals: { material: material }
  %span.paginate
    = paginate(@materials)
